<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="12dp"
    android:background="#E3F2FD"
    android:layout_marginBottom="8dp">

    <TextView
        android:id="@+id/textEstudiante"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Estudiante"
        android:textStyle="bold"
        android:textSize="16sp"
        android:textColor="@android:color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textGrado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Grado"
        android:textColor="@android:color/black"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/textEstudiante"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textMateria"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Materia"
        android:textColor="@android:color/black"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/textGrado"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <TextView
        android:id="@+id/textNota"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Nota"
        android:textColor="@android:color/black"
        android:layout_marginTop="2dp"
        app:layout_constraintTop_toBottomOf="@id/textMateria"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>